# Noindex on static files which are not allowed to be cached.
RewriteEngine On
RewriteCond %{HTTP_HOST} ^www.kortingscode.nl$
RewriteRule ^robots.txt$ public/robots.txt [NC,L]

RewriteCond %{HTTP_HOST} ^www.flipit.com$
RewriteRule ^(.*)/sitemaps/(.*)$ public/$1/sitemaps/$2 [L]

RewriteCond %{HTTP_HOST} ^www.flipit.com$
RewriteRule ^robots.txt$ public/flipit/robots.txt [NC,L]

RewriteRule ^([a-z]{2})(\/)robots.txt$ /public/$1/robots.txt [NC,L]
RewriteRule ^([a-z]{2})(\/)index(.*)$ /$1 [L,R=301,NC]
RewriteRule ^index(.*)$ / [L,R=301,NC]

RewriteCond %{HTTP_HOST} ^www.flipit.com$
RewriteRule ^sitemaps$ public/flipit/robots.txt [NC,L]

#wp redirects (old blog)
RewriteRule ^nieuws/overzicht(.+)?$ http://www.kortingscode.nl/nieuws? [R=301,L]
RewriteRule ^nieuws/archief(.+)?$ http://www.kortingscode.nl/nieuws? [R=301,L]
RewriteRule ^nieuws/2010(.+)?$ http://www.kortingscode.nl/nieuws? [R=301,L]
RewriteRule ^nieuws/2011(.+)?$ http://www.kortingscode.nl/nieuws? [R=301,L]
RewriteRule ^nieuws/2012(.+)?$ http://www.kortingscode.nl/nieuws? [R=301,L]
RewriteRule ^nieuws/2013(.+)?$ http://www.kortingscode.nl/nieuws? [R=301,L]
RewriteRule ^nieuws/posts(.+)?$ http://www.kortingscode.nl/nieuws? [R=301,L]
# wp redirects
RewriteRule ^nieuws.*$ public/blog/index.php [NC,L]
RewriteRule ^robots.txt?$ robots.txt [NC,L]
RewriteRule ^nieuws/([a-zA-Z0-9_-]*)/?$ public/blog/index.php [NC,L]
RewriteRule ^nieuws/([a-zA-Z0-9_-]*)/([a-zA-Z0-9_-]*)/?$ public/blog/index.php [NC,L]
RewriteRule ^nieuws/([a-zA-Z0-9_-]*)/([a-zA-Z0-9_-]*)/([a-zA-Z0-9_-]*)/?$ public/blog/index.php [NC,L]
RewriteRule ^nieuws/([a-zA-Z0-9_-]*)/([a-zA-Z0-9_-]*)/([a-zA-Z0-9_-]*)/([a-zA-Z0-9_-]*)/?$ public/blog/index.php [NC,L]
RewriteRule ^.*$ public/index.php [NC,L]


# ----------------------------------------------------------------------
# Gzip compression
# ----------------------------------------------------------------------

<IfModule mod_deflate.c>

  # Force deflate for mangled headers developer.yahoo.com/blogs/ydn/posts/2010/12/pushing-beyond-gzipping/
  <IfModule mod_setenvif.c>
    <IfModule mod_headers.c>
      SetEnvIfNoCase ^(Accept-EncodXng|X-cept-Encoding|X{15}|~{15}|-{15})$ ^((gzip|deflate)\s*,?\s*)+|[X~-]{4,13}$ HAVE_Accept-Encoding
      RequestHeader append Accept-Encoding "gzip,deflate" env=HAVE_Accept-Encoding
    </IfModule>
  </IfModule>

  # Compress all output labeled with one of the following MIME-types
  # (for Apache versions below 2.3.7, you don't need to enable `mod_filter`
  # and can remove the `<IfModule mod_filter.c>` and `</IfModule>` lines as
  # `AddOutputFilterByType` is still in the core directives)
  <IfModule mod_filter.c>
    AddOutputFilterByType DEFLATE application/atom+xml \
                                  application/javascript \
                                  application/json \
                                  application/rss+xml \
                                  application/vnd.ms-fontobject \
                                  application/x-font-ttf \
                                  application/xhtml+xml \
                                  application/xml \
                                  font/opentype \
                                  image/svg+xml \
                                  image/x-icon \
                                  text/css \
                                  text/html \
                                  text/plain \
                                  text/x-component \
                                  text/xml
  </IfModule>

</IfModule>
