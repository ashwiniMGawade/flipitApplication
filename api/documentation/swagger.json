            },
            "usergenratedcontent":{
               "type":"int",
               "description":"Allow user generated content",
               "enum":[1,0]
            },
            "discussions":{
               "type":"int",
               "description":"Allow discussions",
               "enum":[1,0]
            },
            "title":{
               "type":"string",
