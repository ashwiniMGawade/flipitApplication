            "deepLinkStatus":{
               "type":"int",
               "description":"Deeplink code (Yes/No)",
               "enum":[1,0]
            },
            "refUrl":{
               "type":"string",
               "description":"Ref Url(Page slug)"
            },
            "actualUrl":{
               "type":"string",
