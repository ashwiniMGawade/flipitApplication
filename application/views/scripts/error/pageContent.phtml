<?php
if ($this->pageMode == true) {
    $sidebarWidgetHtml = '';
    $partialsViewPath = 'partials/';
    $pageContent = '';
    $contentDivStart ='';
    $contentDivEnd = '';
    if ($this->page['pageType'] == "offer") {
        if ($this->offercount > 0) {
            $pageContent = $this->partial(
                $partialsViewPath.'_offer.phtml',
                array(
                   'offers'=> $this->offersPaginator,
                   'offersType'=>'offerPage',
                   'shopName'=> '',
                   'shop'=>'',
                   'zendForm'=>$this->form,
               )
            );
        } else {
            $pageContent ='<div class = "no-record">' . $this->translate('No record found') .'</div>';
        }
        $signUpWidgetForm = $this->partial(
            $partialsViewPath.'_signupForm.phtml',
            array(
               'zendForm' => $this->sidebarWidgetForm,
               'signupFormWidgetType'=> 'sidebarWidget',
               'shopId'=>'',
               'shopLogoOrDefaultImage'=>''
            )
        );
        $frontendViewHelper = new FrontEnd_Helper_viewHelper();
        $sidebarWidgets = $this->widget . $frontendViewHelper->socialMediaWidget(). $signUpWidgetForm;
        $sidebarWidgetHtml = '<aside class="col-md-4 col-sm-4" id="sidebar">' . $sidebarWidgets . '</aside>';
        $contentDivStart = '<div id="content" class="col-md-8 col-sm-8">';
        $contentDivEnd = '</div>';
    } else {
        $pageContent='<div class="section"><div class="inner-section-wrapper"><h1>'.$this->page['pageTitle'].'</h1>'.stripslashes($this->page['content']) .'</div></div>';
    }
    $imagePath = isset($this->pageHeaderImage['path']) ? $this->pageHeaderImage['path'] : '';
    $imageName = isset($this->pageHeaderImage['name']) ? $this->pageHeaderImage['name'] : '';
    $pageImagePath = PUBLIC_PATH_CDN.$imagePath.$imageName;
    $pageHeader = new FrontEnd_Helper_PageHeaderPartialFunctions();
    echo $pageHeader->getCategoryOrPageHeader($this->page['pageTitle'], $pageImagePath);?>
    <div class="row">
         <?php echo $contentDivStart;?>
         <?php echo $pageContent; ?>
         <?php echo $contentDivEnd . $sidebarWidgetHtml;?>
    </div>
    <?php 
}
