<script type="text/javascript">
    $(document).ready(function(){
    $('input#shopId').val($('input#currentShop').val())
    validateAddSocialCode();
    $("#sharecode").submit(function(){
        if ($("form#socialcodeForm").valid()) {
            saveSocialCode();
